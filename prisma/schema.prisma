generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  batch           String?
  discord         String?
  email           String        @unique
  faculty         String?
  gender          String?
  hashedPassword  String
  id              String        @id
  image           String?
  major           String?
  name            String
  personal_email  String?
  role            String
  telegram        String?
  total_events    Int?          @default(0)
  year            String?
  isAdmin         Boolean?      @default(false)
  wallet          String?
  departmentId    String?
  interviewNotes  String?
  AppliedRole     AppliedRole[]
  AttendanceTaken Attendance[]
  Department      Department?   @relation(fields: [departmentId], references: [department_id])
  events          Event[]       @relation("EventToUser")
  Project         Project[]     @relation("ProjectToUser")
  Attendance      Attendance[]  @relation("attendanceToUser")
}

model Event {
  endDate    DateTime     @db.Date
  hasStarted Boolean      @default(false)
  name       String
  id         String       @id @default(uuid())
  qr_code    String?
  startDate  DateTime     @default(now()) @db.Date
  Attendance Attendance[]
  attendees  User[]       @relation("EventToUser")
}

model Log {
  date    DateTime? @default(now())
  message String
  id      String    @id @default(uuid())
  title   String
  type    LogType
}

model Attendance {
  id      String @id
  eventId String
  userId  String
  Event   Event  @relation(fields: [eventId], references: [id])
  user    User   @relation(fields: [userId], references: [id])
  User    User[] @relation("attendanceToUser")
}

model AppliedRole {
  id           String            @id
  rank         Int
  departmentId String
  role         String
  status       ApplicationStatus
  applicantId  String
  User         User              @relation(fields: [applicantId], references: [id])
  Department   Department        @relation(fields: [departmentId], references: [department_id])
}

model Department {
  department_id String        @id
  name          String
  AppliedRole   AppliedRole[]
  Project       Project[]
  User          User[]
}

model Project {
  description  String
  difficulty   Int
  rating       Int
  department   String?
  project_id   String      @id
  name         String
  team_lead    String
  created_date DateTime
  Department   Department? @relation(fields: [department], references: [department_id])
  User         User[]      @relation("ProjectToUser")
}

enum LogType {
  WARNING
  ERROR
}

enum ApplicationStatus {
  ACCEPTED
  OFFERED
  PENDINGREVIEW
  INTERVIEWED
  REJECTED
}
